<h1 class="mb-3">Dashboard</h1>

 <div class="my-bookings-container monster-spec-background-color p-3 mb-2">
  <h2 class="mb-3">My Bookings</h2>
  <% current_user.bookings.each do |booking| %>
    <div class="card-trip">
        <%= cl_image_tag(booking.monster.photo.key, height: 200, width: 350, crop: :fill, :class => "show-photo-border-radius") %>
      <div class="card-trip-infos">
        <div>
          <h3><%= booking.monster.name %></h3>
          <p><strong>Species: </strong><%= booking.monster.species %></p>
          <p><strong>Booked: </strong><%= "#{booking.start_date} - #{booking.end_date}" %></p>
        </div>
        <div>
        <% days = booking.end_date - booking.start_date %>
        <p><strong>Total cost: </strong><%= "£#{ days.to_i * booking.monster.price.round }"%></p>
        <p><%= "£#{ booking.monster.price.round } per day " %></p>
        </div>
      </div>
    </div>
  <% end %>
  </div>

  <div class="monster-spec-background-color p-3">
    <h2 class="mb-3">My Monsters</h2>
    <%= link_to "List new monster", new_monster_path %>
    <div class="my-monsters-container">
      <% current_user.monsters.each do |monster| %>
        <div class="my-monster-card col-3 col-lg-3">
          <%= cl_image_tag(monster.photo.key, height: 200, width: 350, crop: :fill, :class => "show-photo-border-radius") %>
            <div class="my-monster-text mt-2">
              <h3><%= monster.name %></h3>
              <p><strong>Species: </strong><%= monster.species %></p>
              <p><strong>Ability: </strong><%= monster.ability %></p>
              <p><strong>Price: </strong>£<%= monster.price.round %> /day</p>
              <%= link_to "Edit monster details", edit_monster_path(monster) %>
            </div>
        </div>
      <% end %>
    </div>
  </div>

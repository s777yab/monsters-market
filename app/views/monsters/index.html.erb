
<div class="title">
  <h1 class="text-center">Monster Market </h1>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="row">
  <% @monsters.each do |monster| %>
    <div class="col-12 col-lg-3">
      <div class="card">
        <%= cl_image_tag(monster.photo.key, :class => "card-img-top") %>
        <div class="card-body">
          <h5 class="card-title text-center"><%= monster.name %></h5>
          <p class="card-text text-center">Price: $<%= monster.price %></p>
          <%= link_to "Monster", monster_path(monster), class: "btn btn-outline-dark text-center" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
